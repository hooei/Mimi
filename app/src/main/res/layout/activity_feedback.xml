<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="47.0dip">

        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/action_bar_title"
            android:gravity="center_vertical"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/feedback_faq"
            android:drawableLeft="@drawable/ic_faq"
            android:onClick="clickOnPrivacy" />

        <View
            android:background="@color/divider"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <EditText
        android:textSize="16.0sp"
        android:textColor="@color/edit_box_content"
        android:textColorHint="@color/edit_box_content_hint"
        android:gravity="top"
        android:id="@id/edit_box"
        android:background="@null"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:hint="@string/feedback_hint"
        android:layout_weight="1.0"
        android:inputType="textMultiLine" />

    <View
        android:background="@color/divider"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip" />

    <EditText
        android:textSize="16.0sp"
        android:textColor="@color/edit_box_content"
        android:textColorHint="@color/edit_box_content_hint"
        android:id="@id/edit_box_contact"
        android:background="@null"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="47.0dip"
        android:hint="@string/feedback_contact_hint" />
</LinearLayout>