<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/item_background_holo_light"
    android:paddingLeft="10.0dip"
    android:longClickable="true"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/chat_list_item_secret_size"
    android:onClick="clickOnChat"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@id/avatar"
        android:layout_width="@dimen/chat_list_item_avatar_size"
        android:layout_height="@dimen/chat_list_item_avatar_size"
        android:layout_centerVertical="true" />

    <TextView
        android:textSize="11.0sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@id/unread_count"
        android:background="@drawable/ic_unread_count_bg"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32.0dip"
        android:layout_marginTop="6.0dip" />

    <ImageView
        android:id="@id/secret_image"
        android:layout_width="@dimen/chat_list_item_width"
        android:layout_height="@dimen/chat_list_item_height"
        android:layout_alignParentRight="true" />

    <TextView
        android:gravity="center"
        android:id="@id/secret_content"
        android:clickable="true"
        android:layout_width="@dimen/chat_list_item_height"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:onClick="clickOnSecret" />

    <TextView
        android:textSize="18.0sp"
        android:id="@id/chat_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14.0dip"
        android:layout_marginRight="14.0dip"
        android:singleLine="true"
        android:layout_toLeftOf="@id/secret_image"
        android:layout_toRightOf="@id/avatar"
        android:layout_centerVertical="true" />

    <View
        android:background="?android:listDivider"
        android:layout_width="wrap_content"
        android:layout_height="1.0px"
        android:layout_toLeftOf="@id/secret_image"
        android:layout_alignLeft="@id/chat_content"
        android:layout_alignParentBottom="true" />

    <com.wumii.android.view.CountDownProgressBar
        android:id="@id/countdown_progress"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="2.0dip"
        android:progressDrawable="@drawable/progress_bar_state_green"
        android:minHeight="2.0dip"
        android:layout_toLeftOf="@id/secret_image"
        android:layout_alignLeft="@id/chat_content"
        android:layout_alignParentBottom="true"
        style="?android:attr/progressBarStyleHorizontal" />
</RelativeLayout>