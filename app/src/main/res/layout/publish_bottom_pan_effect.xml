<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/publish_bottom_pan_height"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@id/container"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0" />

    <include layout="@layout/divider_view" />

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="46.0dip">

        <ImageView
            android:id="@id/back"
            android:background="@drawable/item_background_holo_light"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_publish_bottom_pan_back"
            android:contentDescription="@null" />

        <ImageView
            android:id="@id/filter"
            android:background="@drawable/item_background_holo_light"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_publish_bottom_pan_filter"
            android:layout_alignParentRight="true"
            android:contentDescription="@null" />

        <ImageView
            android:id="@id/seek"
            android:background="@drawable/item_background_holo_light"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_publish_bottom_pan_seek"
            android:layout_toLeftOf="@id/filter"
            android:contentDescription="@null" />
    </RelativeLayout>
</LinearLayout>