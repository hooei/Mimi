<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@id/avatar"
        android:layout_width="@dimen/chat_detail_item_avatar_size"
        android:layout_height="@dimen/chat_detail_item_avatar_size"
        android:layout_alignParentRight="true"
        android:contentDescription="@null" />

    <FrameLayout
        android:id="@id/content_container"
        android:background="@drawable/chat_bubble_right_dark_gray"
        android:paddingRight="6.5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/avatar" />

    <ProgressBar
        android:id="@id/sending"
        android:visibility="gone"
        android:layout_width="30.0dip"
        android:layout_height="30.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_toLeftOf="@id/content_container"
        android:layout_centerVertical="true"
        style="?android:attr/progressBarStyleSmall" />

    <ImageView
        android:id="@id/failed"
        android:visibility="gone"
        android:layout_width="26.0dip"
        android:layout_height="26.0dip"
        android:layout_marginRight="10.0dip"
        android:src="@drawable/ic_send_failed"
        android:layout_toLeftOf="@id/content_container"
        android:layout_centerVertical="true"
        android:onClick="clickOnRetrySend"
        android:contentDescription="@null" />
</RelativeLayout>