<?xml version="1.0" encoding="utf-8"?>
<selector android:exitFadeDuration="@android:integer/config_shortAnimTime" xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="2.0dip" />
            <solid android:color="@color/red_button_bg_disabled" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="2.0dip" />
            <solid android:color="@color/red_button_bg_pressed" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="2.0dip" />
            <solid android:color="@color/red_button_bg_normal" />
        </shape>
    </item>
</selector>